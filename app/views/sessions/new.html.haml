- provide(:title, "Sign in")
%h1 Sign in
.row
  .span6.offset3
    = form_for(:session, url: sessions_path) do |f|
    = f.label :email
    = f.text_field :email
    = f.label :password
    = f.password_field :password
    %p= f.submit "Sign in", class: "btn btn-large btn-primary"
    %p
      Forgot password? #{link_to "Reset password", new_password_reset_path}
      %p
        New user? #{link_to "Sign up now!", signup_path}
