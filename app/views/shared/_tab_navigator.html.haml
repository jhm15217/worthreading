%ul.nav.nav-tabs
  %li{ class: ("active" if params[:action] == "home") }
    = link_to "Email List", root_path
  %li{ class: ("active" if params[:action] == "index" && params[:controller] == "relationships") }
    = link_to relationships_path do
      Subscribers List
      -if current_user.subscribers.empty?
        %span.badge.badge-important#subscription_badge 1
  %li{ class: ("active" if params[:action] == "subscribed_to_list") } 
    = link_to "Subscribed To List", subscribed_to_list_user_path(@user.id)

:javascript
  badge_options = {
    animation: true,
    placement: 'bottom',
    trigger: 'hover',
    content: 'No subscribers. Add subscribers.'
  }
  $('#subscription_badge').popover(badge_options)
