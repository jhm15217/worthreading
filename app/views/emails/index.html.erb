<div class="row">
    <h1>Messages Sent</h1>
<div class="row">
  <div class="span10 offset2">

    <table>
      <tr>
        <th>From</th>
        <th>To</th>
        <th>Subject</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <%= will_paginate %>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.from %></td>
        <td><%= email.to %></td>
        <td><%= email.subject %></td>
        <td><%= link_to 'Show', email %></td>
        <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </table>
    <%= will_paginate %>
  </div>
</div>

