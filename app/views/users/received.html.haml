.span6
  - if !signed_in?
    - redirect_to home_path
  - else
    = render 'shared/received'

.span4
  %h2 Best Recent Messages
  %table.table
    %tr
      %th Name
      %th Subject
      %th Liked
    - best_recent_emails.each do |line|
      %tr
        %td= User.find(line.sender_id).name
        %td= link_to Email.find(line.email_id).subject, user_email_path(@user, Email.find(line.email_id))
        %td= line.liked

