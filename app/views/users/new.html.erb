<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  .span6.offset3
  = form_for(@user) do |f|
  = render 'shared/error_messages', object: f.object
  = f.label :name
  = f.text_field :name

  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= render 'fields', object: f.object, f:f %>
      <p><%= f.submit "Create my account", class: "btn btn-large btn-primary" %></p>
    <% end %>
  </div>
</div>